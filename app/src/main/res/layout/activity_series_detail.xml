<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SeriesDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="?attr/colorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/series_poster"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/backgrounds/scenic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        tools:text="Título de la Serie"/>

                    <TextView
                        android:id="@+id/detail_season"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textStyle="bold"
                        tools:text="Temporada: 1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="0dp"
                        android:paddingTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_imdb"
                            app:tint="@color/icon_color" /> <!-- CAMBIO CLAVE -->
                        <TextView
                            android:id="@+id/detail_imdb_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textStyle="bold"
                            tools:text="8.7" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_rotten_tomatoes"
                            app:tint="@color/icon_color" /> <!-- CAMBIO CLAVE -->
                        <TextView
                            android:id="@+id/detail_rotten_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textStyle="bold"
                            tools:text="92%" />

                        <TextView
                            android:id="@+id/detail_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="14dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            tools:text="2024" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="6"
                        android:ellipsize="end"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="Sinopsis de la serie..."/>

                </LinearLayout>
            </LinearLayout>

            <!-- Contenedor para los botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="0dp">

                <ImageButton
                    android:id="@+id/favorite_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_favorite_border"
                    app:tint="?attr/colorControlNormal"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/watchlist_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bookmark_border"
                    app:tint="?attr/colorControlNormal"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
            <Spinner
                android:id="@+id/season_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/episodes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episodios"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/episodes_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Sección de Recomendaciones -->
            <TextView
                android:id="@+id/recommendations_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Te podría gustar"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendations_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingHorizontal="14dp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>